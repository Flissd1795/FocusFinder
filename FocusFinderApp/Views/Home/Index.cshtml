@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</head>

<div class="header-buttons">
    @if (ViewBag.IsLoggedIn == true)
    {
        <div class="user-info">
            <p>Welcome, @ViewBag.Username!</p>
            <a href="/Profile/@ViewBag.Username" class="btn btn-primary">Profile</a>
            <a href="/Logout" class="btn btn-danger">Logout</a>
        </div>
    }
    else
    {
        <a href="/Login" class="btn btn-primary">Login</a>
        <a href="/Register" class="btn btn-success">Register</a>
    }
</div>

<div class="i-body-top body-top">
    <div class="text-center">
        <h1 class="display-4">FocusFinder</h1>
        <form asp-controller="Location" asp-action="Search" method="get" class="search-form">
            <input type="text" name="query" placeholder="Location" class="search-input" required>
            <button type="submit" class="search-button">Search</button>
        </form>
    </div>
</div>

