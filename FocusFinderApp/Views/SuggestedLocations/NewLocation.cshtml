@{
    ViewData["Title"] = "New Location";
}

@{Console.WriteLine("Reached - NewLocation.cshtml");}

@if (ViewBag.IsLoggedIn == null || ViewBag.IsLoggedIn == false)
{
    <h5>Please login to suggest a new location</h5>
    <a href="/Login" class="btn btn-primary">Go to Login</a>
}
else
{
    <div class="i-container">
    <div class="i-location-container i-study-pic-container padded wid">
    <form method="post" asp-controller="Location" asp-action="GetNewLocation" enctype="multipart/form-data">
            <h2 class="no-top">Suggest a new location</h2>

            <div class="mb-3">
                <input id="SuggestedLocationName" name="SuggestedLocationName" placeholder="Enter location name" class="search-input small-in" required/>
            </div>

            <div class="mb-3">
                <input id="StreetAddress" name="StreetAddress" placeholder="Enter street address" class="search-input small-in" required/>
            </div>

            <div class="mb-3">
                <input id="BuildingIdentifier" name="BuildingIdentifier" placeholder="Enter building number" class="search-input small-in" required/>
            </div>

            <div class="mb-3">
                <input id="City" name="City" placeholder="Enter city" class="search-input small-in" required/>
            </div>

            <div class="mb-3">
                <input id="County" name="County" placeholder="Enter country" class="search-input small-in"/>
            </div>

            <div class="mb-3">
                <input id="Postcode" name="Postcode" placeholder="Enter postcode" class="search-input small-in" required/>
            </div>

            <div class="mb-3">
                <label for="ImageURL" class="form-label">Upload a JPG, PNG or GIF</label>
                <input type="file" id="ImageURL" name="ImageURL" accept=".jpg,.jpeg,.png,.gif"/>
            </div>

                <button type="submit" class="search-button mar-top sidebar-icon pad-less">Submit Location Suggestion</button>
    </form>
    </div>
    </div>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
}

