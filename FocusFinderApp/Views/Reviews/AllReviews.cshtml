@using System.Linq
@model List<FocusFinderApp.Models.Review>
    
@{
    ViewData["Title"] = "Reviews";
}

<head>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</head>

<div class="i-body-top body-top">
    <div class="text-center">
        <h1 class="display-4">My Reviews</h1>
    </div>
</div>


<div>
    
    @{
        if (ViewBag.IsLoggedIn == null || ViewBag.IsLoggedIn == false)
        {
            <h5>Please login to view your reviews</h5>
            <a href="/Login" class="btn btn-primary">Go to Login</a>
        }
        else{

            if (Model?.Any() == true)
            { 
                foreach (var review in Model)
                {   
                    <div class="i-location-container i-study-pic-container glow-back">
                        <a href="/Reviews/@review.id">
                    
                            <h3>Your Review of @ViewBag.LocationName</h3>
                            <h4> Overall Review</h4>

                            @{
                                if (@review.dateLastUpdated != null){
                                    <p>Date Added: @review.dateLastUpdated</p>
                                }

                                if (@review.overallRating != null){
                                    <p>Overall Rating: @review.overallRating‚≠ê</p>
                                } 
                                
                            }
                            
                            <h4>In-Depth Review (if any)</h4>
                            @{
                                if (@review.comments != null){
                                    <p>Comments: @review.comments</p>
                                }
                                if (@review.noiseLevel != null){
                                    <p>Noise Levels: @review.noiseLevel</p>
                                }
                                if (@review.wifiSpeed != null){
                                    <p>Wi-Fi Speed: @review.wifiSpeed</p>
                                }
                                if (@review.cleanliness != null){
                                    <p>Cleanliness: @review.cleanliness</p>
                                }
                                if (@review.seatingAvailability != null){
                                    <p>Seating Availability: @review.seatingAvailability</p>
                                }
                                if (@review.chargingPointAvailability != null){
                                    <p>Charging Point Availability: @review.chargingPointAvailability</p>
                                }
                            }

                            <h4>Review Tags (if any)</h4>
                            @{
                                if (@review.freeWifi != null){
                                    <p>Free Wi-Fi Available</p>
                                }
                                if (@review.toilets != null){
                                    <p>Toilets Available</p>
                                }
                                if (@review.babychanging != null){
                                    <p>Babychanging Available</p>
                                }
                                if (@review.wheelchairAccessible != null){
                                    <p>Wheelchair Accessible</p>
                                }
                                if (@review.officeLike != null){
                                    <p>Office-like</p>
                                }
                                if (@review.homeLike != null){
                                    <p>Home-like</p>
                                }
                                if (@review.queerFriendly != null){
                                    <p>Queer Friendly</p>
                                }
                                if (@review.neurodivergentFriendly != null){
                                    <p>Neurodiversity Friendly</p>
                                }
                                if (@review.groupFriendly != null){
                                    <p>Group Friendly</p>
                                }
                                if (@review.veganFriendly != null){
                                    <p>Vegan Options Available</p>
                                }
                                if (@review.glutenFreeOptions != null){
                                    <p>Gluten Free Options Available</p>
                                }
                                if (@review.petFriendly != null){
                                    <p>Pet Friendly</p>
                                }
                                if (@review.heating != null){
                                    <p>Heating</p>
                                }
                                if (@review.airConditioning != null){
                                    <p>Air Conditioning</p>
                                }                                
                            }
                        </a>
                    </div>
                }

            }


        }
    
    }

</div>
