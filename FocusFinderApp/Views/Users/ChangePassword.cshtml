@model FocusFinderApp.Models.ChangePasswordModelView

<head>
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
</head>
<div class="i-container">
<div class="profile-container">
    <div class="i-location-container i-study-pic-container padded">
        <h2 class="no-top">Change Password</h2>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="ChangePassword" method="post">
            <input type="hidden" asp-for="Username" />

            <div class="form-group">
                <input asp-for="CurrentPassword" class="search-input small-in" placeholder="Enter current password" required />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="NewPassword" class="search-input small-in" placeholder="Enter new password" required />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmPassword" class="search-input small-in" placeholder="Confirm new password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="search-button bar mar-top">Update Password</button>
                <a href="/Profile/@Model.Username" class="search-button bar mar-top sidebar-icon">Cancel</a>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}