@model FocusFinderApp.Models.UserEditModelView


@{
    ViewData["Title"] = "Edit Profile";
}
<div class="i-container">
<form action="/Profile/Edit" method="post" enctype="multipart/form-data">
    <div>
        <label>First Name:</label>
        <input class="search-input small-in" type="text" name="FirstName" value="@Model.FirstName">
    </div>
    <div>
        <label>Last Name:</label>
        <input class="search-input small-in" type="text" name="LastName" value="@Model.LastName">
    </div>
    <div>
        <label>Default City:</label>
        <input class="search-input small-in" type="text" name="DefaultCity" value="@Model.DefaultCity">
    </div>

    <!-- Show existing profile picture -->
    @if (!string.IsNullOrWhiteSpace(Model.ProfilePicture))
    {
        <div>
            <label>Current Profile Picture:</label><br>
            <img src="@Model.ProfilePicture" alt="Profile Picture" style="width:120px; height:120px; border-radius:50%;">
        </div>
    }

    <!-- Upload new profile picture -->
    <div>
        <label>Upload New Profile Picture:</label>
        <input type="file" name="ProfilePictureFile">
    </div>

    <a href="/Profile/ChangePassword" class="search-button bar mar-top sidebar-icon">Change Password</a>
    <button type="submit" class="search-button bar mar-top">Save Changes</button>
</form>
</div>